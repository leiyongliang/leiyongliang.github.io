/* pages/index/msg.wxss */
.msg{
  height: 100%;
  padding: 20px 0;
  box-sizing: border-box;
  background: #f60002;
  overflow: auto;
}

.title{
  color: #fef900;
  text-align: center;
  font-size: 24px;
}

.author {
  margin: 10px 0;
  color: #fef900;
  font-size: 16px;
  text-align: center;
}
.item{
  color: #fef900;
  font-size: 22px;
  text-align: center;
  padding: 16px 10px;
  line-height: 1.6;
}
.translate{
  position: absolute;
  bottom: 30px;
  right: 30px;
  background: #d10001;
  border-radius: 50%;
  height: 60px;
  width: 60px;
  line-height: 60px;
  text-align: center;
  color: #fef900;
}